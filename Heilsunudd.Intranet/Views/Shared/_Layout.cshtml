<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Heilsunudd.Intranet</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/input.css" asp-append-version="true"/>
    <link href="~/css/output.css" rel="stylesheet"  asp-append-version="true">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inika:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col justify-between bg-[#F0F0F0]">
    
    <header>
        <nav class="border-b-2 shadow-xl">
            <div class="flex flex-row items-center justify-between flex-wrap bg-white p-6 w-full">
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:outline-dashed hover:outline-2 hover:outline-offset-1 hover:border-0 hover:-translate-y-2 active:bg-black active:text-white active:scale-98 font-inika" asp-area="" asp-controller="Home" asp-action="Index">Heilsunudd Main Panel</a>
                </div>
                <ul class="flex items-center gap-4">
                    <partial name="_LoginPartial"/>
                </ul>
            </div>
        </nav>
        <img
            class="brightness-125 contrast-150 max-h-20 w-full bg-transparent"
            src="/public/grill-top.png"
            alt="stripes"/>
    </header>
    <main role="main" class="flex-grow pb-3 flex flex-col gap-20 items-center justify-center w-full h-full">
        @RenderBody()
    </main>
    <footer class="">
        <img
            class="brightness-125 contrast-150 max-h-20 w-full shadow-lg bg-transparent"
            src="/public/grill-top.png"
            alt="stripes"/>
        <div class="border-t-2 p-4 max-h-1/12 w-full bg-white font-inika">
            &copy; 2025 - Heilsunudd Intranet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
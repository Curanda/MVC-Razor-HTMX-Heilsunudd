<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heilsunudd.Portal</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inika:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body>
    <main
      class="bg-[url('/public/img-hero.png')] bg-cover bg-center brightness-75 contrast-150 bg-no-repeat w-screen h-screen flex flex-col justify-between font-inika"
    >
      <img
        class="contrast-150 brightness-125 min-h-1/20"
        src="/public/grill-top.png"
        alt="stripes"
      />
      <nav
        class="flex flex-row w-full justify-evenly gap-24 text-nowrap tracking-widest text-black text-2xl [&>div>div>a]:hover:outline-2 [&>div>div>a]:hover:outline-offset-2 [&>div>div>a]:hover:outline-dotted"
      >
        <div class="flex flex-row items-center justify-between gap-24">
          <div class="relative inline-block ripple-parent">
            <a
              id="bookings-link"
              class="ripple-button relative z-10 inline-block border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:-translate-y-2 active:bg-black active:text-white active:scale-95 font-inika"
              asp-page="/Bookings"
            >
              BOOKINGS
            </a>
            <div
              id="ripple-container"
              class="ripple-container absolute top-0 left-0 w-full h-full pointer-events-none z-0"
            ></div>
          </div>
          <div class="relative inline-block ripple-parent">
            <a
              id="about-us-link"
              class="ripple-button relative z-10 inline-block border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:-translate-y-2 active:bg-black active:text-white active:scale-95 font-inika"
              href="/AboutUs"
            >
              ABOUT US
            </a>
            <div
              id="ripple-container"
              class="ripple-container absolute top-0 left-0 w-full h-full pointer-events-none z-0"
            ></div>
          </div>
        </div>
        <div class="flex flex-row items-center justify-between gap-24">
          <div class="relative inline-block ripple-parent">
            <a
              asp-page="/ContactUs"
              class="ripple-button relative z-10 inline-block border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:-translate-y-2 active:bg-black active:text-white active:scale-95 font-inika"
            >
              CONTACT
            </a>
            <div
              id="ripple-container"
              class="ripple-container absolute top-0 left-0 w-full h-full pointer-events-none z-0"
            ></div>
          </div>
          <div class="relative inline-block ripple-parent">
            <a
              class="ripple-button relative z-10 inline-block border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:-translate-y-2 active:bg-black active:text-white active:scale-95 font-inika"
              href="#blog"
            >
              BLOG
            </a>
            <div
              id="ripple-container"
              class="ripple-container absolute top-0 left-0 w-full h-full pointer-events-none z-0"
            ></div>
          </div>
        </div>
      </nav>
        @RenderBody()
      <img
        class="brightness-125 contrast-150 min-h-1/20"
        src="/public/grill-top.png"
        alt="stripes"
      />
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

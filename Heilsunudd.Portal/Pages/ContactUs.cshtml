@page
@model Heilsunudd.Pages.ContactUs

@{
    ViewData["Title"] = "Contact us";
}

<section
    id="ContactUs"
    class="flex flex-col items-center justify-between mx-auto gap-10 h-3/5 w-3/5"
>
    <div class="flex flex-row items-center justify-center gap-4 text-black">
        <span class="text-lg font-inika">●</span>
        <h1 class="text-4xl font-inika">Contact</h1>
        <span class="text-lg font-inika">●</span>
    </div>
    <div class="flex flex-row justify-between gap-50 max-h-4/5 m-auto" id="intro">
        <div class="m-auto">
            <div class="rounded-lg bg-gray-100 p-7 flex flex-col justify-evenly gap-5 h-auto outline-3 outline-offset-5 outline-dotted outline-white" id="textCard">
                <form method="POST" action="/contactus">
                    <h3 class="text-xl">Contact us</h3>
                    <div class="flex flex-col gap-5">
                        <input type="text" name="name" placeholder="Name" required class="p-2 border-2 border-gray-300 rounded-md"/>
                        <input type="email" name="email" placeholder="Email" required class="p-2 border-2 border-gray-300 rounded-md"/>
                        <textarea name="message" placeholder="Message" required class="p-2 border-2 border-gray-300 rounded-md"></textarea>
                        <hr class="my-4 border-gray-300" />
                        <button type="submit" class="border-2 border-black rounded-lg py-3 px-10 cursor-pointer transition duration-300 ease-in-out hover:-translate-y-2 active:bg-black active:text-white active:scale-95 active:outline-2 active:outline-dotted active:outline-offset-2 font-inika">Send</button>
                    </div>
                </form>
            </div>
        </div>
        <img class="opacity-75 outline-2 outline-offset-3 outline-solid rounded-xl" src="public/im-card.jpg"/>
    </div>
</section>